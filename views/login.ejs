<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Far Reach Co. | Login</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="/lib/MobileNavHandler.js" defer></script>
    <%- include('./partials/icons') %>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container">
      <form id="login-form" class="auth-container">
        <div class="form-item">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="name@whatever.com"
            required
          />
        </div>
        <div class="form-item">
          <label for="email">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Yeah!LetMeIn1"
            required
          />
        </div>
        <br />
        <div>
          <button type="submit">Login</button>
        </div>
        <br />
        <small>Don't have an account or forgot your password?</small>
        <a onclick=" window.location.pathname = '/register' "
          ><small>Register</small></a
        >
        <a href="/forgotpassword"><small>Forgot Password</small></a>
      </form>
    </div>
    <%- include('./partials/footer') %>
  </body>
  <script>
    document.getElementById("login-form").addEventListener("submit", login);
    async function login(e) {
      e.preventDefault();
      const formData = new FormData(e.target);
      const formProps = Object.fromEntries(formData);
      try {
        const res = await fetch(`${window.location.origin}/api/login`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formProps),
        });
        const resData = await res.json();
        if (res.status === 200) {
          if (resData.message) console.log(resData.message);
          // if invite UUID in params push to invite page
          var searchParams = new URLSearchParams(window.location.search);
          var inviteUUID = searchParams.get("invite");
          if (inviteUUID) {
            return (window.location.pathname = "/invite");
          }
          // else push to account page
          window.location.pathname = "/dashboard";
        } else if (res.status === 400) {
          alert(resData.message);
        } else {
          throw resData.error;
        }
      } catch (err) {
        alert("Failed to login");
        console.log(err);
      }
    }
  </script>
</html>
