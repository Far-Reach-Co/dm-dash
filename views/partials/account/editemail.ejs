<div
  style="display: flex; flex-direction: column; background-color: inherit"
  id="email-area"
>
  <form hx-post="/update_email" hx-swap="outerHTML" hx-target="#email-area">
    <label for="email">Edit Email</label>
    <input
      type="email"
      id="email"
      name="email"
      value="<%= user.email %>"
      required
    />
    <br />
    <button type="submit">Done</button>
  </form>
</div>
